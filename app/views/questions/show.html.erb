<h1> Question Description</h1><br/>

<h3> Email - <%= current_user.email %> </h3>
<h3> Question - <%= @question.question %> </h3>
<% answers = @question.answers.pluck(:answer) %>
<% answers.each do |answer| %>
  <h3> Ans - <%= answer %></h3>
<% end %>

<% if user_signed_in? %>
  <%= link_to "Follow User", follow_user_user_path(@question.user), method: :post %>
  <!-- <!%= link_to "Follow Topic", follow_topic_topic_path(@question.topic), method: :post %> -->
<% end %>



<%= link_to "Back", root_path, class: "btn btn-outline-info mt-4" %>